<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Users List</title>
</head>
<body>
  
  <div class="container mt-5">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3">
      <h5>Users List</h5>
      <div class=" me-2">
      <a href="/users/add" class="btn btn-primary">Add User</a>
      </div>
    </div>
    <table class="table  table-bordered">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Group</th>
          <th>Store</th>
          <th>User Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Confirm Password</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone</th>
          <th>Gender</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{this.group}}</td>
          <td>{{this.storeId.storeName}}</td>
          <td>{{this.userName}}</td>
          <td>{{this.email}}</td>
          <td>{{this.password}}</td>
          <td>{{this.confirmPassword}}</td>
          <td>{{this.firstName}}</td>
          <td>{{this.lastName}}</td>
          <td>{{this.phone}}</td>
          <td>{{this.gender}}</td>
    
          <td>
            <a href="/users/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/users/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>




