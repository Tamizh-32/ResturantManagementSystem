<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Product List</title>
</head>
<body>
  
  <div class="container mt-5">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3">
      <h5>Product List</h5>
      <div class=" me-2">
      <a href="/products/add" class="btn btn-primary">Add Product</a>
      </div>
    </div>
    <table class="table  table-bordered">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Product Name</th>
          <th>Image</th>
          <th>Price</th>
          <th>Description</th>
          <th>Category</th>
         <th>Store</th>
         <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{this.productName}}</td>
          <td><img src="{{this.image}}" alt="Product Image" width="50"></td>
          <td>{{this.price}}</td>
          <td>{{this.description}}</td>
          <td>{{this.categoryId.categoryName}}</td>
          <td>{{this.storeId.storeName}}</td>
          <td>{{this.status}}</td>
        
          <td>
            <a href="/products/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/products/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
