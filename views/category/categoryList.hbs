<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Cateogry List</title>
</head>
<body>
  
  <div class="container mt-5">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3">
      <h5>Category List</h5>
      <div class=" me-2">
      <a href="/category/add" class="btn btn-primary">Add Category</a>
      </div>
    </div>
    <table class="table  table-bordered">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Category Name</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each category}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{this.categoryName}}</td>
          <td>{{this.status}}</td>
          <td>
            <a href="/category/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/category/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>




