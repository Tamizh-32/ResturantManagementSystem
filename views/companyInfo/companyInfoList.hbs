<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Company Info </title>
</head>
<body>
  
  <div class="container mt-5">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3">
      <h5>Company Info</h5>
      <div class=" me-2">
      <a href="/companyinfo/add" class="btn btn-primary">Add Company</a>
      </div>
    </div>
    <table class="table  table-bordered">
      <thead>
        <tr>
      
          <th>S.no</th>
          <th>Company Name</th>
            <th>Company Code</th>
            <th>Charge Amount</th>
            <th>Vat Charge</th>
            <th>Description</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Address</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each companyinfo}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{this.companyName}}</td>
          <td>{{this.companyCode}}</td>
          <td>{{this.chargeAmount}}</td>
          <td>{{this.vatCharge}}</td>
          <td>{{this.description}}</td>
          <td>{{this.email}}</td>
          <td>{{this.contact}}</td>
          <td>{{this.address}}</td>
          <td>{{this.status}}</td>
          <td>
            <a href="/companyinfo/edit{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/companyInfo/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>




