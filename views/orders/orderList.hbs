<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Order List</title>
</head>
<body>
  
  <div class="container mt-5">
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3">
      <h5>Order List</h5>
      <div class="me-2">
        <a href="/orders/add" class="btn btn-primary">Add Order</a>
      </div>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Customer Name</th>
          <th>Phone</th>
          <th>Table</th>
          <th>Product</th>
          <th>Qty</th>
          <th>Rate</th>
          <th>Amount</th>
          <th>Gross Amount</th>
          <th>Tax %</th>
          <th>Discount</th>
          <th>Net Amount</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <td>{{inc @index}}</td>
          <td>{{this.customerName}}</td>
          <td>{{this.customerPhone}}</td>
          <td>{{this.tableId.tableName}}</td>
          <td>
            {{#each this.products}}
              <div>{{this.productId.productName}}</div>
            {{/each}}
          </td>
          <td>
            {{#each this.products}}
              <div>{{this.qty}}</div>
            {{/each}}
          </td>
          <td>
            {{#each this.products}}
              <div>{{this.rate}}</div>
            {{/each}}
          </td>
          <td>
            {{#each this.products}}
              <div>{{this.amount}}</div>
            {{/each}}
          </td>
          <td>{{this.grossAmount}}</td>
          <td>{{this.taxAmount}}</td>
          <td>{{this.discount}}</td>
          <td>{{this.netAmount}}</td>
          <td>{{this.orderstatusId.statusName}}</td>
          <td>
            <a href="/orders/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/orders/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</body>
</html>
