<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Add Table</title>
  
  <link rel="stylesheet" href="/css/style.css">
      <script src="/js/validation.js" defer></script>
</head>
<body>
      {{> navbar}}
  {{> sidebar}}
  <div class="container  mb-3 col col-lg-6 border  border-effect" >
     <div  class="bg-secondary p-2 text-white ">
       <h5>Add Table</h5>
    </div>
  <div class="container mt-2 mb-2">
   
    <form  action="/tables" method="POST" class="needs-validation" novalidate>
      <div class="mb-2">
        <label for="tableName" class="form-label">Table Name</label>
        <input type="text" name="tableName" class="form-control" required>
        <span class="text-danger" style="display: none;"></span> <!-- Error message -->
      </div>
       <div class="mb-2">
        <label for="capacity" class="form-label">Capacity</label>
        <input type="number" name="capacity" class="form-control" required>
        <span class="text-danger" style="display: none;"></span> <!-- Error message -->
      </div>
      <div class="mb-2">
    <label for="tablestatusId" class="form-label">Table Status</label>
    <select name="tablestatusId" class="form-control" required>
      <option value="">Select Table Status</option>
       {{#each tablestatus}}
              <option value="{{this._id}}">{{this.statusName}}</option>
       {{/each}}
    </select>
    <span class="text-danger" style="display: none;"></span> <!-- Error message -->
</div>

  
         <div class="mb-2">
          <label for="status" class="form-label">Status</label>
          <select name="status" class="form-control" required>
            <option value="">Select Status</option>
            {{#each activeEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
    <br>
      <button type="submit" class="btn btn-success">Save</button>
        <a href="/tables" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
  </div>
</body>
</html>












