<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Table List</title>
    <link rel="stylesheet" href="./css/style.css">
      <script src="../js/search.js"></script>
</head>
<body>
  {{> sidebar}}
  <div class="container">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3 mobile-stack">
        <h5>{{title}}</h5> <!-- Use dynamic title here -->
      <div class="me-2">
          <input type="text"  class="form-control" id="searchInput" onkeyup="filterTable()" placeholder="Search for names..">
      </div>
      <div class=" me-2">
      <a href="/tables/add" class="btn btn-primary">Add Table</a>
      </div>
    </div>

  

    <table class="table  table-bordered" id="dataTable">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Table No</th>
          <th>Capacity</th>
          <th>Status</th>
          <th>Store Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        {{#each tables}}
        <tr>
          <td data-label="S.No">{{inc @index}}</td>
          <td data-label="Table Name">{{this.tableName}}</td>
          <td data-label="Capacity">{{this.capacity}}</td>
          <td data-label="Status">{{this.tablestatusId.statusName}}</td>
         <td data-label="Store Name">{{this.storeId.storeName}}</td>
          <td data-label="Actions">
            <a href="/tables/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/tables/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{> pagination}}
  </div>
</body>
</html>




