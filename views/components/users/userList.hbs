<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Users List</title>
    <link rel="stylesheet" href="./css/style.css">
      <script src="../js/search.js"></script>
</head>
<body>
  {{> sidebar}}
  
  <div class="container">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3 mobile-stack">
          <h5>{{title}}</h5> <!-- Use dynamic title here -->
      <div class="me-2">
          <input type="text"  class="form-control" id="searchInput" onkeyup="filterTable()" placeholder="Search for names..">
      </div>
      <div class=" me-2">
      <a href="/users/add" class="btn btn-primary">Add User</a>
      </div>
    </div>
   
    <table class="table  table-bordered" id="dataTable">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Group</th>
          <th>Store</th>
          <th>User Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Confirm Password</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Phone</th>
          <th>Gender</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        {{#each users}}
        <tr>
          <td data-label="S.No">{{inc @index}}</td>
          <td data-label="Group">{{this.group}}</td>
          <td data-label="Store Name">{{this.storeId.storeName}}</td>
          <td data-label="User Name">{{this.userName}}</td>
          <td data-label="Email">{{this.email}}</td>
          <td data-label="Password">{{this.password}}</td>
          <td data-label="Confirm Password">{{this.confirmPassword}}</td>
          <td data-label="First Name">{{this.firstName}}</td>
          <td data-label="Last Name">{{this.lastName}}</td>
          <td data-label="Phone">{{this.phone}}</td>
          <td data-label="Gender">{{this.gender}}</td>
    
          <td data-label="Actions">
            <a href="/users/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/users/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{> pagination}}
  </div>
</body>
</html>




