<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Company Info</title>
  <link rel="stylesheet" href="./css/style.css">
    <script src="../js/search.js"></script>
  <style>
 
  </style>
</head>
<body>
  {{> sidebar}}  <!-- Sidebar inclusion -->

  <div class="container">
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3 mobile-stack">
      <h5>{{title}}</h5> <!-- Use dynamic title here -->
      <div class="me-2">
          <input type="text"  class="form-control" id="searchInput" onkeyup="filterTable()" placeholder="Search for names..">
      </div>
      <div class="me-2">
        <a href="/companyinfo/add" class="btn btn-primary">Add Company</a>
      </div>
    </div>


    <!-- Table with dynamic column resizing -->
    <table class="table table-bordered " id="dataTable" >
      <thead>
        <tr>
          <th>S.no</th>
          <th>Company Name</th>
          <th>Company Code</th>
          <th>Charge Amount</th>
          <th>Vat Charge</th>
          <th class="description-column">Description</th>
          <th>Email</th>
          <th>Contact</th>
          <th class="address-column">Address</th>  <!-- Mark address column with custom class -->
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tableBody" >
        {{#each companyinfo}}
        <tr>
           <td data-label="S.no">{{inc @index}}</td>
          <td data-label="Company Name">{{this.companyName}}</td>
          <td data-label="Company Code">{{this.companyCode}}</td>
          <td data-label="Charge Amount">{{this.chargeAmount}}</td>
          <td data-label="Vat Charge">{{this.vatCharge}}</td>
          <td data-label="Description" class="description-column">{{this.description}}</td>
          <td data-label="Email">{{this.email}}</td>
          <td data-label="Contact">{{this.contact}}</td>
          <td data-label="Address" class="address-column">{{this.address}}</td> <!-- Apply custom class to address column -->
          <td data-label="Status">{{this.status}}</td>
          <td data-label="Actions">
            <a href="/companyinfo/edit{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/companyInfo/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{> pagination}}  <!-- pagination inclusion -->
  </div>
</body>
</html>
