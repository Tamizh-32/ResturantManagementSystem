<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Company Info</title>
  
  <link rel="stylesheet" href="/css/style.css">
      <script src="/js/validation.js" defer></script>
</head>
<body>
      {{> navbar}}
  {{> sidebar}}
  <div class="container mb-5 col-lg-8 border border-effect">
     <div class="bg-secondary p-2 text-white">
       <h5>Company Info</h5>
    </div>
  <div class="container mt-2 mb-2">
    <form action="/companyinfo/{{companyinfo._id}}?_method=PUT" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
      <div class="row mb-2">
        <div class="col-md-6">
          <label for="companyName" class="form-label">Company Name</label>
          <input type="text" name="companyName" class="form-control" value="{{companyinfo.companyName}}" required>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
        <div class="col-md-6">
          <label for="companyCode" class="form-label">Company Code</label>
          <input type="text" name="companyCode" class="form-control" value="{{companyinfo.companyCode}}" required>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
      </div>
      <div class="row mb-2">
         <div class="col-md-6">
            <label for="logo" class="form-label">Current Logo</label>
            <img src="{{companyinfo.logo}}" alt="Company Logo" class="d-block mb-3" style="width: 100px;">
            <input type="hidden" name="existingLogo" value="{{companyinfo.logo}}">
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
 </div>
  <div class="col-md-6">
            <label for="logo" class="form-label">Upload New Logo (optional)</label>
            <input type="file" name="logo" class="form-control">
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
          </div>

          <div class="mb-2">
  <label for="storeId" class="form-label">Store</label>
  <select name="storeId" class="form-control" required>
      {{#each stores}}
      <option value="{{this._id}}" {{#if (eq this._id ../table.storeId)}}selected{{/if}}>
        {{this.storeName}}
      </option>
    {{/each}}
  </select>
  <span class="text-danger" style="display: none;"></span> <!-- Error message -->
</div>

      <div class="row mb-2">
        <div class="col-md-6">
          <label for="chargeAmount" class="form-label">Charge Amount</label>
          <input type="text" name="chargeAmount" class="form-control" value="{{companyinfo.chargeAmount}}" required>
        </div>
        <div class="col-md-6">
          <label for="vatCharge" class="form-label">Vat Charge</label>
          <input type="text" name="vatCharge" class="form-control" value="{{companyinfo.vatCharge}}" required>
        </div>
      </div>
       <div class="mb-2">
        <label for="gstno" class="form-label">GST NO</label>
        <input type="text" name="gstno" class="form-control" value="{{companyinfo.gstno}}" required>
        <span class="text-danger" style="display: none;"></span> <!-- Error message -->
      </div>
 
      <div class="row mb-2">
        <div class="col-md-6">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control" value="{{companyinfo.email}}" required>
                  <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
        <div class="col-md-6">
          <label for="contact" class="form-label">Contact</label>
          <input type="text" name="contact" class="form-control" value="{{companyinfo.contact}}" required>
                  <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
      </div>
    <div class="row mb-2">
          <div class="col-md-6">
            <label for="street" class="form-label">Street</label>
            <input  type="text" name="street" class="form-control" value="{{companyinfo.street}}" required>
                    <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
              <div class="col-md-6">
            <label for="City" class="form-label">City</label>
            <input  type="text" name="city" class="form-control" value="{{companyinfo.city}}" required>
                    <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
         
        </div>
         <div class="row mb-2">
          <div class="col-md-6">
            <label for="state" class="form-label">State</label>
            <input  type="state" name="state" class="form-control" value="{{companyinfo.state}}" required>
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
              <div class="col-md-6">
            <label for="zip" class="form-label">Zip</label>
            <input  type="text" name="zip" class="form-control" value="{{companyinfo.zip}}" required>
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
         
        </div>

          <div class="col-md-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" required >{{companyinfo.description}}</textarea>
          </div>
      <div class="mb-2">
          <label for="status" class="form-label">Status</label>
          <select name="status" class="form-control" required>
            <option value="">Select Status</option>
            {{#each activeEnum}}
              <option value="{{this}}" {{#if (eq this ../companyinfo.status)}}selected{{/if}}>{{this}}</option>
            {{/each}}
          </select>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
      <br>
      <button type="submit" class="btn btn-success">Update </button>
      <a href="/companyinfo" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
  </div>
</body>
</html>
