<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Add Menu</title>
  
  <link rel="stylesheet" href="/css/style.css">
      <script src="/js/validation.js" defer></script>
</head>
<body>
      {{> navbar}}
  {{> sidebar}}
  <div class="container mb-3 col-lg-8 border border-effect p-4">
    <div class="bg-secondary p-2 text-white">
      <h5>Add Menu</h5>
    </div>
    <div class="container mt-3">
      <form action="/products" method="POST" enctype="multipart/form-data"class="needs-validation" novalidate >
        <div class="row mb-2">
          <div class="col-md-6">
            <label for="productName" class="form-label">Menu Name</label>
            <input type="text" name="productName" class="form-control" required>
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
          <div class="col-md-6">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="image" class="form-control" required>
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
        </div>

        <div class="row mb-2">
          <div class="col-md-6">
            <label for="price" class="form-label">Price</label>
            <input type="text" name="price" class="form-control" required>
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
          <div class="col-md-6">
            <label for="categoryId" class="form-label">Category</label>
            <select name="categoryId" class="form-control" required>
              <option value="">Select Category</option>
              {{#each categories}}
                <option value="{{this._id}}">{{this.categoryName}}</option>
              {{/each}}
            </select>
            <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
        </div>

        <div class="row mb-2">
  
          <div class="col md-6">
          <label for="status" class="form-label">Status</label>
          <select name="status" class="form-control" required>
            <option value="">Select Status</option>
            {{#each activeEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>
        </div>

        <div class="row mb-2">
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" class="form-control" required></textarea>
             <span class="text-danger" style="display: none;"></span> <!-- Error message -->
          </div>
        </div>
        
        <br>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/products" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</body>
</html>
