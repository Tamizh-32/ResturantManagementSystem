<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Add Role</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/validation.js" defer></script>
</head>
<style>
 input[type="checkbox"] {
    height:30px;
    width: 15px;
    cursor: pointer;
}


</style>
<body>
  {{> navbar}}
  {{> sidebar}}
<div class="container mb-3 col col-lg-10 border border-effect"> <!-- Increased width -->

    <div class="bg-secondary p-2 text-white">
      <h5>Add Role</h5>
    </div>
    <div class="container mt-2 mb-2">
      <form action="/roles" method="POST" class="needs-validation" novalidate>
        <!-- Role Name Field -->
        <div class="mb-2">
          <label for="role" class="form-label">Role Name</label>
          <input type="text" name="role" class="form-control" required>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>

  

 <div class="table-responsive mt-3">
  <table class="table table-bordered text-center">
    <thead class="table-secondary">
      <tr>
        <th>Menus</th>
        <th>View</th>
        <th>Add</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each menus}}
      <tr>
        <td>{{this.name}}</td>
        <td>
          <input type="checkbox" name="permissions[{{this._id}}][viewRoute]" value="true">
        </td>
        <td>
          <input type="checkbox" name="permissions[{{this._id}}][addRoute]" value="true">
        </td>
        <td>
          <input type="checkbox" name="permissions[{{this._id}}][editRoute]" value="true">
        </td>
        <td>
          <input type="checkbox" name="permissions[{{this._id}}][deleteRoute]" value="true">
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>


        <!-- Active Status Field -->
        <div class="mb-2">
          <label for="status" class="form-label">Status</label>
          <select name="status" class="form-control" required>
            <option value="">Select Status</option>
            {{#each activeEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
          <span class="text-danger" style="display: none;"></span> <!-- Error message -->
        </div>

        <!-- Submit and Cancel Buttons -->
        <br>
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/roles" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</body>
</html>