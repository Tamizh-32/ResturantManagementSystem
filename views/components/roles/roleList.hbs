<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Role List</title>
  <link rel="stylesheet" href="./css/style.css">
  <script src="../js/search.js"></script>
</head>
<body>
  {{> navbar}}
  {{> sidebar}}

  <div class="container">
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3 mobile-stack">
      <h5>{{title}}</h5>
      <div class="me-2">
        <input type="text" class="form-control" id="searchInput" onkeyup="filterTable()" placeholder="Search for names..">
      </div>
      <div class="me-2">
        <a href="/roles/add" class="btn btn-primary">Add Role</a>
      </div>
    </div>

    <table class="table table-bordered" id="dataTable">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Role</th>
          <th>Menus</th>
          <th>Store</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        {{#each roles}}
        <tr>
          <td data-label="S.No">{{inc @index}}</td>
          <td data-label="Role">{{this.role}}</td>

          <td data-label="Menus">
            {{#each this.menuPermissions}}
              {{this.menuId.name}}{{#unless @last}}, {{/unless}}
            {{/each}}
          </td>
          <td data-label="Store Name">{{this.storeId.storeName}}</td>
          <td data-label="Status">{{this.status}}</td>
          <td data-label="Actions">
            <a href="/roles/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/roles/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{> pagination}}
  </div>
</body>
</html>