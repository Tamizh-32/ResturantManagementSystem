<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Add Menu</title>
  
  <link rel="stylesheet" href="/css/style.css">
      <script src="/js/validation.js" defer></script>
</head>
<body>
      {{> navbar}}
  {{> sidebar}}
  <div class="container  mb-3 col col-lg-6 border  border-effect" >
     <div  class="bg-secondary p-2 text-white ">
       <h5>Add Menu</h5>
    </div>
  <div class="container mt-2 mb-2">
   
    <form  action="/menus" method="POST" class="needs-validation" novalidate>
      <div class="mb-2">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" class="form-control" required>
        <span class="text-danger" style="display: none;"></span> <!-- Error message -->
      </div>

    <div class="mb-2">
          <label for="route" class="form-label">View Route</label>
          <select name="viewRoute" class="form-control"  >
            <option value="">Select View Route</option>
            {{#each viewEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
         
        </div>
           <div class="mb-2">
          <label for="route" class="form-label">Add Route</label>
          <select name="addRoute" class="form-control" >
            <option value="">Select Add Route</option>
            {{#each addEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        
        </div>
           <div class="mb-2">
          <label for="route" class="form-label">Edit Route</label>
          <select name="editRoute" class="form-control" >
            <option value="">Select Edit Route</option>
            {{#each editEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
       
        </div>
           <div class="mb-2">
          <label for="route" class="form-label">Delete Route</label>
          <select name="deleteRoute" class="form-control"  >
            <option value="">Select Delete Route</option>
            {{#each deleteEnum}}
              <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
        
        </div>
      
