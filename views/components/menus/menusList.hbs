<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <title>Menus List</title>
    <link rel="stylesheet" href="./css/style.css">
      <script src="../js/search.js"></script>
</head>
<body>
      {{> navbar}}
  {{> sidebar}}
  <div class="container">
   
    <div class="d-flex bg-secondary text-white p-2 justify-content-between mb-3 mobile-stack">
    <h5>{{title}}</h5> <!-- Use dynamic title here -->
      <div class="me-2">
          <input type="text"  class="form-control" id="searchInput" onkeyup="filterTable()" placeholder="Search for names..">
      </div>
      <div class=" me-2">
      <a href="/menus/add" class="btn btn-primary">Add Menu</a>
      </div>
    </div>
    
    <table class="table  table-bordered" id="dataTable">
      <thead>
        <tr>
          <th>S.no</th>
          <th>Store Name</th>
          <th>Name</th>
          <th>View Route </th>
          <th>Add Route </th>
          <th>Edit Route </th>
          <th>Delete Route </th>
          <th>Active</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="tableBody">
        {{#each menuToEdit}}
        <tr>
          <td data-label="S.No">{{inc @index}}</td>
         <td data-label="Store Name">{{this.storeId.storeName}}</td>
          <td data-label="Status Name">{{this.name}}</td>
             <td data-label="ViewRoute">{{this.viewRoute}}</td>
             <td data-label="AddRoute">{{this.addRoute}}</td>
             <td data-label="EditRoute">{{this.editRoute}}</td>
             <td data-label="DeleteRoute">{{this.deleteRoute}}</td>
            <td data-label="Status">{{this.status}}</td>
          <td data-label="Actions">
            <a href="/menus/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
            <form action="/menus/{{this._id}}?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    {{> pagination}}
  </div>
</body>
</html>




