<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Sidebar</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> <!-- Font Awesome Link -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/sidebar.css">
</head>

<body>

<div id="sidebarContainer">
  <nav id="sidebarMenu" class="sidebar">
    <div class="list-group list-group-flush mx-3 mt-4">
     <!-- Dashboard -->
{{#if (includesByName menus "Dashboard")}}
  <a href="/dashboard" class="list-group-item list-group-item-action py-2 ripple" id="dashboard">
    <i class="fas fa-tachometer-alt me-3"></i><span>Dashboard</span>
  </a>
{{/if}}

<!-- Tables -->
{{#if (includesByName menus "Table")}}
  <a href="/tables" class="list-group-item list-group-item-action py-2 ripple" id="tables">
    <i class="fas fa-table me-3"></i><span>Tables</span>
  </a>
{{/if}}

<!-- Table Status -->
{{#if (includesByName menus "TableStatus")}}
  <a href="/tablestatus" class="list-group-item list-group-item-action py-2 ripple" id="tablestatus">
    <i class="fas fa-tasks me-3"></i><span>Table Status</span>
  </a>
{{/if}}

<!-- Category -->
{{#if (includesByName menus "Categories")}}
  <a href="/categories" class="list-group-item list-group-item-action py-2 ripple" id="category">
    <i class="fas fa-tags me-3"></i><span>Category</span>
  </a>
{{/if}}

<!-- Menus -->
{{#if (includesByName menus "Products")}}
  <a href="/products" class="list-group-item list-group-item-action py-2 ripple" id="menus">
    <i class="fas fa-box-open me-3"></i><span>Menus</span>
  </a>
{{/if}}

<!-- Orders -->
{{#if (includesByName menus "Orders")}}
  <a href="/orders" class="list-group-item list-group-item-action py-2 ripple" id="orders">
    <i class="fas fa-shopping-cart me-3"></i><span>Orders</span>
  </a>
{{/if}}

<!-- Order Status -->
{{#if (includesByName menus "OrderStatus")}}
  <a href="/orderstatus" class="list-group-item list-group-item-action py-2 ripple" id="orderstatus">
    <i class="fas fa-receipt me-3"></i><span>Order Status</span>
  </a>
{{/if}}

<!-- Store -->
{{#if (includesByName menus "stores")}}
  <a href="/stores" class="list-group-item list-group-item-action py-2 ripple" id="stores">
    <i class="fas fa-store me-3"></i><span>Store</span>
  </a>
{{/if}}

<!-- Routing Menus -->
{{!-- {{#if (includesByName menus "Menus")}}
  <a href="/menus" class="list-group-item list-group-item-action py-2 ripple" id="routingmenus">
    <i class="fas fa-map-signs me-3"></i><span>Routing Menus</span>
  </a>
{{/if}} --}}

<!-- Role -->
{{#if (includesByName menus "Roles")}}
  <a href="/roles" class="list-group-item list-group-item-action py-2 ripple" id="roles">
    <i class="fas fa-user-shield me-3"></i><span>Role</span>
  </a>
{{/if}}

<!-- Company Info -->
{{#if (includesByName menus "CompanyInfo")}}
  <a href="/companyinfo" class="list-group-item list-group-item-action py-2 ripple" id="companyinfo">
    <i class="fas fa-info-circle me-3"></i><span>Company Info</span>
  </a>
{{/if}}

<!-- Users -->
{{#if (includesByName menus "Users")}}
  <a href="/users" class="list-group-item list-group-item-action py-2 ripple" id="users">
    <i class="fas fa-users me-3"></i><span>Users</span>
  </a>
{{/if}}

    </div>
  </nav>
</div>

<script>
  console.log("Menus in Frontend:", {{{json menus}}});

  const currentPath = window.location.pathname;
  const menuItems = document.querySelectorAll('#sidebarMenu a');
  menuItems.forEach(item => {
    if (item.getAttribute('href') === currentPath) {
      item.classList.add('active');
    }
  });
</script>

</body>
</html>