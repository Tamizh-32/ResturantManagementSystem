<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}}</title>

  <!-- Minimized CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/public/css/styles.css"> <!-- External CSS for custom styles -->

  <!-- Optimized FontAwesome -->
  <script src="https://kit.fontawesome.com/a076d05399.js" defer></script>
<style>
  .toast-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1050;
    width: 400px;
    max-width: 90%; /* This might override the custom width on mobile */
  }

  .toast {
    font-size: 1rem;
    padding: 2rem;
    width: 300px;
    border-radius: 0.5rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  html, body { height: 100%; margin: 0; }
  .wrapper { min-height: 100vh; display: flex; flex-direction: column; }
  .content { flex: 1; }
  footer { background-color: #f8f9fa; color: #000; text-align: center; padding: 10px; border-top: 1px solid #ddd; }

  @media (max-width: 576px) {
    .toast-container {
      width: auto !important;    /* Override Bootstrap's max-width */
      max-width: 350px !important; /* Force max width */
    }

    .toast {
      width: 250px !important;   /* Make the toast take full container width */
      padding: 1rem !important; /* Adjust padding */
      font-size: 0.9rem !important; /* Adjust font size */
    }
  }
</style>


</head>

<body>
  <div class="wrapper">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-dark fixed-top">
      <div class="container-fluid">
        <li id="sidebarToggle" style="cursor: pointer;">â˜°</li>
        <a class="navbar-brand" href="#">
          <img src="/images/logo.png" height="50" alt="Logo" loading="lazy" />
        </a>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="#">
              <i class="fas fa-bell"></i>
              <span class="badge bg-danger">1</span>
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="content p-3">
      {{{body}}}
    </main>

    <!-- Footer -->
    <footer class="bg-light">
      <div class="container">&copy; Levicent 2025. All Rights Reserved.</div>
    </footer>
  </div>

  <!-- Flash Messages -->
  <div class="toast-container">
    {{#if successMessage}}
      <div class="toast bg-success text-white border-0" role="alert">
        <div class="d-flex">
          <div class="toast-body">{{successMessage}}</div>
          <button class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      </div>
    {{/if}}

    {{#if errorMessage}}
      <div class="toast bg-danger text-white border-0" role="alert">
        <div class="d-flex">
          <div class="toast-body">{{errorMessage}}</div>
          <button class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
      </div>
    {{/if}}
  </div>

  <!-- Scripts at the Bottom -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
  <script src="/public/js/main.js" defer></script> <!-- External JS for custom logic -->

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.toast').forEach(toastEl => {
        new bootstrap.Toast(toastEl).show();
      });

      document.getElementById('sidebarToggle')?.addEventListener('click', () => {
        document.getElementById('sidebarMenu')?.classList.toggle('open');
      });
    });
  </script>
</body>
</html>